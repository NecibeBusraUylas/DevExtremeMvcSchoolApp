@model IEnumerable<DevExtremeMvcSchoolApp.Models.CourseEnrollment>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Student Course Enrollment List</h2>
<hr />
<br />
<table class="table">
    <tr>
        <th>
            Course
        </th>
        <th>
            Student
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.Name)
                @Html.DisplayFor(modelItem => item.Student.Surname)
            </td>
            <td>
                <button type="button" class="btn btn-outline-dark"> @Html.ActionLink("Update", "Edit", new { id = item.Id })</button>
            </td>
            <td>
                <button type="button" class="btn btn-outline-dark">   @Html.ActionLink("Details", "Details", new { id = item.Id })</button>
            </td>
            <td>
                <button type="button" class="btn btn-outline-dark">  @Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>
<br />
<button type="button" class="btn btn-outline-dark"> @Html.ActionLink("Enroll Student To Course", "Create")</button>