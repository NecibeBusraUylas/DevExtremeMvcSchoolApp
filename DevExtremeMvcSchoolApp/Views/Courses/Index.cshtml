@model IEnumerable<DevExtremeMvcSchoolApp.Models.Course>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Course List</h2>
<hr />
<br />
<table class="table">
    <tr>
        <th>
            Course
        </th>
        <th>
            Instructor
        </th>
        <th></th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.Name)
                @Html.DisplayFor(modelItem => item.Instructor.Surname)
            </td>
            <td>
                <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Update", "Edit", new { id = item.Id })</button>
            </td>
            <td>
                <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Details", "Details", new { id = item.Id })</button>
            </td>
            <td>
                <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</button>
            </td>
        </tr>
    }

</table>
<br />
<button type="button" class="btn btn-outline-dark">@Html.ActionLink("Add New Course", "Create")</button>