@model DevExtremeMvcSchoolApp.Models.Course

@{
    ViewBag.Title = "Delete";
}
<br />
<h2>Delete Course</h2>
<hr />
<div>
    <br />
    <dl class="dl-horizontal">
        <dt>
            Course
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <br />
        <dt>
            Instructor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Instructor.Name)
            @Html.DisplayFor(model => model.Instructor.Surname)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions text-black fw-bold">
            Are you sure you want to delete this?
            &nbsp;
            <input type="submit" value="Delete" class="btn btn-default" style="border:1px solid black; color:var(--bs-link-color); text-decoration:underline;" />
        </div>
        <br />
        <button type="button" class="btn btn-outline-dark">@Html.ActionLink("Back to Course Page", "Index")</button>
    }
</div>
